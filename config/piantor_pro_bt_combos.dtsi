combos {
    compatible = "zmk,combos";

    // ===== TAB AND RETURN COMBOS (50ms timeout, 100ms require-prior-idle) =====
    combo_tab {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <12 13>;  // S+T → Return
        bindings = <&kp RET>;
        layers = <0 1 2 3 4>;
    };
    combo_return {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <16 17>;  // N+E → Tab
        bindings = <&kp TAB>;
        layers = <0 1 2 3 4>;
    };

    // ===== VERTICAL COMBOS (50ms timeout, 100ms require-prior-idle) =====
    // Edit combos

    combo_right_click_numsym {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <13 14>;  // T+G → Right Click + Exit (on num_sym layer only)
        bindings = <&right_click_exit>;
        layers = <1>;
    };

    // Navigation combos
    combo_page_up {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <5 15>;  // J+M → Page Up
        bindings = <&kp PG_UP>;
        layers = <0 1 2 3 4>;
    };
    combo_home {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <6 16>;  // L+N → Home
        bindings = <&kp HOME>;
        layers = <0 1 2 3 4>;
    };
    combo_up {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <7 17>;  // U+E → Up
        bindings = <&kp UP>;
        layers = <0 1 2 3 4>;
    };
    combo_end {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <8 18>;  // Y+I → End
        bindings = <&kp END>;
        layers = <0 1 2 3 4>;
    };
    combo_page_down {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <15 25>;  // M+K → Page Down
        bindings = <&kp PG_DN>;
        layers = <0 1 2 3 4>;
    };
    combo_left {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <16 26>;  // N+H → Left
        bindings = <&kp LEFT>;
        layers = <0 1 2 3 4>;
    };
    combo_down {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <17 27>;  // E+, → Down
        bindings = <&kp DOWN>;
        layers = <0 1 2 3 4>;
    };
    combo_right {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <18 28>;  // I+. → Right
        bindings = <&kp RIGHT>;
        layers = <0 1 2 3 4>;
    };
};
