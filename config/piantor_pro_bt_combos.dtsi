    combo_char_astrk {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <7 17>;  // Q+A
        bindings = <&kp DE_ASTERISK>;
        layers = <0 1 2 3 4>;
    };

    combo_char_slash {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <17 27>;  // A+,
        bindings = <&kp DE_SLASH>;
        layers = <0 1 2 3 4>;
    };

    combo_char_euro {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <8 18>;  // U+E
