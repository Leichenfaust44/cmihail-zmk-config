combos {
    compatible = "zmk,combos";

    // ===== TAB AND RETURN COMBOS (50ms timeout, 100ms require-prior-idle) =====
    combo_tab {
        timeout-ms = <50>;
        require-prior-idle-ms = <150>;
        key-positions = <12 13>;  // T+S → Return
        bindings = <&kp RET>;
        layers = <0 1 2 3 4>;
    };
    combo_return {
        timeout-ms = <50>;
        require-prior-idle-ms = <150>;
        key-positions = <11 12>;  // R+T → Tab
        bindings = <&kp TAB>;
        layers = <0 1 2 3 4>;
    };

    // ===== VERTICAL COMBOS LEFT CHARACTERS (50ms timeout, 100ms require-prior-idle) =====

    combo_char_at {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <1 11>;  // L+R
        bindings = <&kp DE_AT_SIGN>;
        layers = <0 1 2 3 4>;
    };

    combo_char_percent {
