    combo_char_amps {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <18 28>;  // E+.
        bindings = <&kp DE_AMPERSAND>;
        layers = <0 1 2 3 4>;
    }; 

    // ===== HORIZONTAL COMBOS RIGHT CHARACTERS (50ms timeout, 100ms require-prior-idle) =====

    // ===== HORIZONTAL COMBOS RIGHT CHARACTERS (50ms timeout, 100ms require-prior-idle) =====

