        bindings = <&kp DOWN>;
        layers = <0 1 2 3 4>;
    };
    combo_right {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <18 28>;  // I+. → Right
        bindings = <&kp RIGHT>;
        layers = <0 1 2 3 4>;
    };

    // ===== VERTICAL COMBOS CHARACTERS (50ms timeout, 100ms require-prior-idle) =====

    combo_char_at {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <2 12>;  // L+R
        bindings = <&kp DE_AT_SIGN>;
        layers = <0 1 2 3 4>;
    };

    combo_char_percent {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <12 22>;  // R+Q
        bindings = <&kp DE_PERCENT>;
        layers = <0 1 2 3 4>;
    };

    combo_char_hash {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <3 13>;  // C+S
        bindings = <&kp DE_HASH>;
        layers = <0 1 2 3 4>;
    };

    combo_char_bslh {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <13 23>;  // S+W
