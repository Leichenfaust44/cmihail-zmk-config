    combo_left {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
        key-positions = <16 26>;  // N+H → Left
        bindings = <&kp LEFT>;
        layers = <0 1 2 3 4>;
    };
    combo_down {
        timeout-ms = <50>;
        require-prior-idle-ms = <100>;
